package a;

import java.util.Scanner;

//crl + shift+ f
public class A_Hello {
	// play with code:
	public static void main(String[] args) {

		// how to print N star: for, while, do...while(at least one: menu drive app)
		// code intentation
		int n = getNumberFromTheUser();
		
		printStarTriangle(n);

	}

	static void printStarTriangle(int n) {
		for (int i = 0; i < n; i++) {
			for (int j = 0; j <=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

	static int getNumberFromTheUser() {
		Scanner scanner=new Scanner(System.in);
		System.out.println("PE a no for star triangle...");
		int n=scanner.nextInt();
		return n;
	}
}
