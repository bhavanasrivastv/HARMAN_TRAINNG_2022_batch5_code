class Employee{
	private  int id;
	private String name;
	private double salary;
	
	//ctr
	public Employee() {
		this(0,"foo",0.0);
	}
							//local variable
	public Employee(int id, String name, double salary) {
	
		this.id=id;
		this.name=name;
		this.salary=salary;
	}
	
	 private void print() {
		 System.out.println("id : "+ id+ " name : "+ name+" salary: "+ salary);
	 }
	
}
public class E_EmployeeDemo {

	public static void main(String[] args) {
		Employee e=new Employee();// default ctr
		
		e.print();
		
	}
}
